!URxvt.transparent: true
!URxvt.shading: 5

URxvt.font: xft:Terminus:size=8
! URxvt.font: xft:Hack:size=10
! xterm*faceName: Droid Sans Mono:size=10:antialias=true
! URxvt.letterSpace: -1 

URxvt.urgentOnBell: true

*.scrollBar: false

URxvt.perl-ext-common: default,font-size,matcher
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1

! Keysyms
URxvt.keysym.C-Up:      perl:font-size:increase
URxvt.keysym.C-Down:    perl:font-size:decrease
URxvt.keysym.C-S-Up:    perl:font-size:incglobal
URxvt.keysym.C-S-Down:  perl:font-size:decglobal

! Colors
! special
*.foreground:   #ffffff
*.background:   #000000
*.cursorColor:  #ffffff

! ! black
!*.color0:       #2e3436
*.color0:       #000000
*.color8:       #555753

! ! red
*.color1:       #a31604
*.color9:       #c60001

! ! green
*.color2:       #447241
*.color10:      #27a343

! ! yellow
*.color3:       #c1951a
*.color11:      #d5a30e

! ! blue
*.color4:       #425387
*.color12:      #4a5a8d

! ! magenta
*.color5:       #965d98
*.color13:      #893c8c

! ! cyan
*.color6:       #06989a
*.color14:      #12bccb

! ! white
*.color7:       #d3d7cf
*.color15:      #eeeeec

