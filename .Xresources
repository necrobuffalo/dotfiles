!URxvt.transparent: true
!URxvt.shading: 50
!URxvt.font: xft:xos4 Terminus:size=8
URxvt.font: xft:Hack:size=8
! xterm*faceName: Droid Sans Mono:size=10:antialias=true

Xft.dpi:96
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting:true
Xft.hintstyle:hintslight

URxvt.urgentOnBell: true

*.scrollBar: false

URxvt.perl-ext-common: default,font-size,matcher
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1

! Keysyms
URxvt.keysym.C-Up:      perl:font-size:increase
URxvt.keysym.C-Down:    perl:font-size:decrease
URxvt.keysym.C-S-Up:    perl:font-size:incglobal
URxvt.keysym.C-S-Down:  perl:font-size:decglobal

! rofi configuration
rofi.font:              Hack 10
rofi.hlfg:              #ebebeb
rofi.hlbg:              #1a314e
rofi.bc:                #1a314e
rofi.bw:                2
rofi.terminal:          urxvt
rofi.ssh-command:       urxvt -e '{ssh-client} {host}'
rofi.run-shell-command: urxvt -e '{cmd}'
rofi.eh:                1
rofi.line-margin:       1
rofi.separator-style:   solid
rofi.hide-scrollbar:    true


!*foreground:    #ebebeb
!*background:    #030408

